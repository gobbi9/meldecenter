<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5p traceId=%X{traceId:-} spanId=%X{spanId:-} %-40.40c{1} : %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.springframework.test.context.support.AnnotationConfigContextLoaderUtils" level="WARN" />
    <logger name="org.springframework.boot.test.context.SpringBootTestContextBootstrapper" level="WARN" />
    <logger name="org.zalando.logbook" level="TRACE" />
    <logger name="coding.challenge.meldecenter" level="TRACE" />
</configuration>
