<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5p traceId=%X{traceId:-} spanId=%X{spanId:-} %-40.40c{1} : %m%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT" />
    </appender>

    <root level="INFO">
        <appender-ref ref="ASYNC" />
    </root>

    <logger name="org.zalando.logbook" level="TRACE" />
    <logger name="coding.challenge.meldecenter" level="TRACE" />
</configuration>
